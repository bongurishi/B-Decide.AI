{
  "fuzzyVariables": {
    "input": [
      {
        "name": "churn_probability",
        "type": "linguistic",
        "terms": [
          {"label": "low", "membership": "trapezoid", "params": [0, 0, 0.2, 0.4]},
          {"label": "medium", "membership": "triangle", "params": [0.3, 0.5, 0.7]},
          {"label": "high", "membership": "trapezoid", "params": [0.6, 0.8, 1.0, 1.0]}
        ]
      },
      {
        "name": "tenure_months",
        "type": "linguistic",
        "terms": [
          {"label": "new", "membership": "trapezoid", "params": [0, 0, 3, 6]},
          {"label": "established", "membership": "triangle", "params": [6, 18, 30]},
          {"label": "loyal", "membership": "trapezoid", "params": [24, 36, 72, 72]}
        ]
      },
      {
        "name": "monthly_charges",
        "type": "linguistic",
        "terms": [
          {"label": "low", "membership": "trapezoid", "params": [0, 0, 30, 50]},
          {"label": "medium", "membership": "triangle", "params": [40, 65, 90]},
          {"label": "high", "membership": "trapezoid", "params": [80, 100, 150, 150]}
        ]
      },
      {
        "name": "total_charges",
        "type": "linguistic",
        "terms": [
          {"label": "low", "membership": "trapezoid", "params": [0, 0, 500, 1000]},
          {"label": "medium", "membership": "triangle", "params": [800, 2000, 4000]},
          {"label": "high", "membership": "trapezoid", "params": [3000, 5000, 10000, 10000]}
        ]
      }
    ],
    "output": [
      {
        "name": "recommendation_strength",
        "type": "linguistic",
        "terms": [
          {"label": "weak", "membership": "trapezoid", "params": [0, 0, 20, 40]},
          {"label": "moderate", "membership": "triangle", "params": [30, 50, 70]},
          {"label": "strong", "membership": "trapezoid", "params": [60, 80, 100, 100]}
        ]
      },
      {
        "name": "action_priority",
        "type": "linguistic",
        "terms": [
          {"label": "low", "membership": "trapezoid", "params": [1, 1, 3, 4]},
          {"label": "medium", "membership": "triangle", "params": [3, 4, 5]},
          {"label": "high", "membership": "trapezoid", "params": [4, 5, 6, 6]}
        ]
      }
    ]
  },
  "rules": [
    {
      "id": 1,
      "description": "High churn risk and new customer → strong recommendation, high priority",
      "if": [
        {"variable": "churn_probability", "is": "high"},
        {"variable": "tenure_months", "is": "new"}
      ],
      "then": [
        {"variable": "recommendation_strength", "is": "strong"},
        {"variable": "action_priority", "is": "high"}
      ],
      "weight": 1.0
    },
    {
      "id": 2,
      "description": "High churn risk and high value customer → strong recommendation, high priority",
      "if": [
        {"variable": "churn_probability", "is": "high"},
        {"variable": "monthly_charges", "is": "high"}
      ],
      "then": [
        {"variable": "recommendation_strength", "is": "strong"},
        {"variable": "action_priority", "is": "high"}
      ],
      "weight": 1.0
    },
    {
      "id": 3,
      "description": "Medium churn risk and established customer → moderate recommendation, medium priority",
      "if": [
        {"variable": "churn_probability", "is": "medium"},
        {"variable": "tenure_months", "is": "established"}
      ],
      "then": [
        {"variable": "recommendation_strength", "is": "moderate"},
        {"variable": "action_priority", "is": "medium"}
      ],
      "weight": 1.0
    },
    {
      "id": 4,
      "description": "Low churn risk and loyal customer → weak recommendation, low priority",
      "if": [
        {"variable": "churn_probability", "is": "low"},
        {"variable": "tenure_months", "is": "loyal"}
      ],
      "then": [
        {"variable": "recommendation_strength", "is": "weak"},
        {"variable": "action_priority", "is": "low"}
      ],
      "weight": 1.0
    },
    {
      "id": 5,
      "description": "High churn risk and low total charges → strong recommendation, high priority",
      "if": [
        {"variable": "churn_probability", "is": "high"},
        {"variable": "total_charges", "is": "low"}
      ],
      "then": [
        {"variable": "recommendation_strength", "is": "strong"},
        {"variable": "action_priority", "is": "high"}
      ],
      "weight": 0.9
    },
    {
      "id": 6,
      "description": "Medium churn risk and high value → moderate recommendation, medium priority",
      "if": [
        {"variable": "churn_probability", "is": "medium"},
        {"variable": "total_charges", "is": "high"}
      ],
      "then": [
        {"variable": "recommendation_strength", "is": "moderate"},
        {"variable": "action_priority", "is": "medium"}
      ],
      "weight": 1.0
    }
  ],
  "aggregation": "max",
  "defuzzification": "centroid",
  "action_mapping": {
    "strong": {
      "actions": [
        "offer_20_percent_discount_and_premium_support",
        "offer_vip_retention_package"
      ],
      "default": "offer_20_percent_discount_and_premium_support"
    },
    "moderate": {
      "actions": [
        "offer_15_percent_discount",
        "offer_loyalty_rewards_program",
        "offer_10_percent_discount_or_upgrade"
      ],
      "default": "offer_15_percent_discount"
    },
    "weak": {
      "actions": [
        "schedule_account_review_call",
        "send_appreciation_email_with_benefits",
        "continue_standard_service"
      ],
      "default": "continue_standard_service"
    }
  }
}

